###############################
# Severino Noctis Bots .env   #
# Renomeie para .env          #
###############################

# Discord
DISCORD_TOKEN=coloque_seu_token_aqui
DISCORD_ANNOUNCE_CHANNEL_ID=id_canal_para_anuncios
PREFIX=!

# Twitch (Helix + chat)
TWITCH_CHANNEL=bobbunitinhu
TWITCH_LINK=https://twitch.tv/bobbunitinhu
TWITCH_CLIENT_ID=coloque_client_id
TWITCH_CLIENT_SECRET=coloque_client_secret
TWITCH_LIVE_ANNOUNCE_ONCE=true

# (Opcional) Credenciais chat se for usar tmi.js autenticação explícita
# TWITCH_USERNAME=seu_login_twitch
# TWITCH_OAUTH=oauth:xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# YouTube Live
YOUTUBE_API_KEY=sua_chave_api
YOUTUBE_CHANNEL_ID=UCxxxxxxxxxxxxxxxx
YOUTUBE_LIVE_ANNOUNCE=true

# Kick Live
KICK_CHANNEL_SLUG=seu_canal_kick
KICK_LIVE_ANNOUNCE=true

# Polling multi-plataforma (ms)
MULTILIVE_POLL_INTERVAL_MS=60000

# Porta do status server
STATUS_PORT=3080

# Desativar anúncios (opcional)
# YOUTUBE_LIVE_ANNOUNCE=false
# KICK_LIVE_ANNOUNCE=false

# Overrides (opcional)
# POLL_INTERVAL_MS=45000
